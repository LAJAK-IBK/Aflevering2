@page
@model Aflevering2.Pages.Dashboard.SmileyCompanysModel

@{
    ViewData["Title"] = "SmileyCompanys";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Address)
            </th>
            <th>
                Smiley
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Company)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <img src="~/images/@item.ListOfReports[0].SmileyPath" alt="@item.ListOfReports[0].SmileyName" class="smileysmall">
                </td>
                    <td>
                    <a asp-page="./InfoCompanys" asp-route-id="@item.Id">Mere info...</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
